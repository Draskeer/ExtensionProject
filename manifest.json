{
  "manifest_version": 3,
  "name": "Text Reader",
  "version": "1.0",
  "description": "Read text on the current tab",
  "permissions": ["activeTab"],
  "action": {
    "default_icon": "icon48.png",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
